<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hugtra.complayout.MainActivity">

    <Button android:id="@+id/botonRelative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relative Layout"/>

    <Button android:id="@+id/botonLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linear Layout"/>

    <Button android:id="@+id/botonTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table Layout"/>

    <Button android:id="@+id/botonCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CheckBox"/>

    <Button android:id="@+id/botonRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radio Button"/>

    <Button android:id="@+id/botonBotones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boton Toggle"/>
</LinearLayout>